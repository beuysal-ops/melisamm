  <script>
    const surprizLink = document.getElementById("surprizLink");
    const overlay = document.getElementById("overlay");
    const closeBtn = document.getElementById("closeBtn");
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const resultText = document.getElementById("resultText");
    const bigLove = document.getElementById("bigLove");
    const btnArea = document.getElementById("btnArea");
    const bgHearts = document.getElementById("bgHearts");

    function openModal(){
      overlay.style.display = "flex";
      resultText.textContent = "";
      bigLove.style.display = "none";
      noBtn.style.position = "relative";
      noBtn.style.left = "0px";
      noBtn.style.top = "0px";
    }

    function closeModal(){
      overlay.style.display = "none";
    }

    surprizLink.addEventListener("click", (e) => {
      e.preventDefault();
      openModal();
    });

    closeBtn.addEventListener("click", closeModal);
    overlay.addEventListener("click", (e) => {
      if(e.target === overlay) closeModal();
    });

    /* Arka plan kalplerini Ã¼ret */
    function createBackgroundHearts(){
      for(let i=0;i<26;i++){
        const h = document.createElement("div");
        h.className = "bg-heart";
        h.textContent = ["ğŸ’–","ğŸ’—","ğŸ’","ğŸ’˜"][Math.floor(Math.random()*4)];
        h.style.left = Math.random()*100 + "vw";
        h.style.animationDuration = (7 + Math.random()*8) + "s";
        h.style.animationDelay = (Math.random()*5) + "s";
        h.style.fontSize = (14 + Math.random()*26) + "px";
        bgHearts.appendChild(h);
      }
    }
    createBackgroundHearts();

    /* Kalp yaÄŸdÄ±rma */
    function spawnHearts(count = 45){
      for(let i=0;i<count;i++){
        const h = document.createElement("div");
        h.className = "floatHeart";
        h.textContent = ["ğŸ’–","ğŸ’—","ğŸ’˜","ğŸ’","ğŸ’•"][Math.floor(Math.random()*5)];
        h.style.left = Math.random()*100 + "vw";
        h.style.fontSize = (14 + Math.random()*28) + "px";
        h.style.animationDuration = (1.6 + Math.random()*1.8) + "s";
        document.body.appendChild(h);
        setTimeout(() => h.remove(), 3200);
      }
    }

    /* Konfeti */
    function spawnConfetti(count = 30){
      for(let i=0;i<count;i++){
        const c = document.createElement("div");
        c.className = "confetti";
        c.style.left = Math.random()*100 + "vw";
        c.style.animationDuration = (1.2 + Math.random()*1.2) + "s";
        c.style.transform = `rotate(${Math.random()*360}deg)`;
        // rastgele renk
        c.style.background = `hsl(${Math.floor(Math.random()*360)}, 90%, 60%)`;
        document.body.appendChild(c);
        setTimeout(() => c.remove(), 2300);
      }
    }

    /* ParÄ±ltÄ± */
    function sparkleBurst(count = 18){
      for(let i=0;i<count;i++){
        const s = document.createElement("div");
        s.className = "sparkle";
        s.textContent = ["âœ¨","â­","ğŸ’«"][Math.floor(Math.random()*3)];
        s.style.left = (40 + Math.random()*20) + "vw";
        s.style.top = (40 + Math.random()*20) + "vh";
        s.style.fontSize = (12 + Math.random()*18) + "px";
        document.body.appendChild(s);
        setTimeout(() => s.remove(), 1200);
      }
    }

    /* EVET */
    yesBtn.addEventListener("click", () => {
      resultText.textContent = "YaÅŸasÄ±nnn! ğŸ’˜ O zaman beraber oynuyoruz ğŸ˜„";
      bigLove.style.display = "block";

      spawnHearts(70);
      spawnConfetti(50);
      sparkleBurst(25);
    });

    /* HAYIR butonu kaÃ§sÄ±n ğŸ˜„ */
    function moveNoButton(){
      const areaRect = btnArea.getBoundingClientRect();
      const btnRect = noBtn.getBoundingClientRect();

      const maxX = areaRect.width - btnRect.width;
      const maxY = areaRect.height - btnRect.height;

      const x = Math.random() * (maxX < 0 ? 0 : maxX);
      const y = Math.random() * (maxY < 0 ? 0 : maxY);

      noBtn.style.position = "absolute";
      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";
    }

    noBtn.addEventListener("mouseenter", () => {
      moveNoButton();
      resultText.textContent = "HayÄ±r demek yok ğŸ˜ŒğŸ’";
    });

    noBtn.addEventListener("click", () => {
      // tÄ±klarsa bile kaÃ§sÄ±n ğŸ˜„
      moveNoButton();
      resultText.textContent = "YakalayamazsÄ±n ğŸ˜„ğŸ’˜";
      sparkleBurst(8);
    });
  </script>
